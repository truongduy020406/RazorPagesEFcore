@page
@model ASPNET_QL.Pages.Employees.ListModel
@{
}


<h1 class="mb-3">class of Employee</h1>

@if(Model.Employees !=null && Model.Employees.Any()){
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>
                        <a href="/Employees/Edit/@employee.Id" class="btn btn-dark">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}else{
    <p>no Employee</p>
}