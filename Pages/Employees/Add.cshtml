@page
@model ASPNET_QL.Pages.Employee.AddModel
@{
    var messsage = ViewData["message"]?.ToString();
}


<form method="post">
<h1 class="mb-3">Add new employee</h1>
    @if (!String.IsNullOrWhiteSpace(messsage))
    {
        <div class="alert alert-success" role="alert">
            @messsage
        </div>
    }
    <div class="m-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="AddEmployeeRequest.Name"/>
</div>
<div class="m-3">
    <label class="form-label">Email</label>
    <input type="email" class="form-control"asp-for="AddEmployeeRequest.Email"/>
</div>
<div class="m-3">
    <label class="form-label">Salary</label>
    <input type="number" class="form-control" asp-for="AddEmployeeRequest.Salary"/>
</div>
<div class="m-3">
    <label class="form-label">date of birht</label>
    <input type="date" class="form-control" asp-for="AddEmployeeRequest.DateofBirth"/>
</div>
<div class="m-3">
    <label class="form-label">Department</label>
    <input type="text" class="form-control" asp-for="AddEmployeeRequest.Department"/>
</div>

<div class="m-3">
    <button type="submit" class="btn btn-primary">Save</button>
</div>

</form>